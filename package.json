{
  "name": "alfred-encode-decode",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "repository": "git@github.com:levibuzolic/alfred-encode-decode.git",
  "author": "Levi Buzolic <levibuzolic@gmail.com>",
  "license": "MIT",
  "scripts": {
    "make": "pushd quickjs && make && popd",
    "predev": "build",
    "dev": "./quickjs/qjs dist/index.js",
    "prebuild": "rm -rf dist/*",
    "build": "esbuild index.ts --bundle --platform=node --outfile=dist/index.js",
    "postbuild": "./quickjs/qjsc -o dist/alfred-encode-decode dist/index.js",
    "test": "jest"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/quickjs/",
      "/types/"
    ],
    "collectCoverage": true
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@types/base-64": "^1.0.0",
    "@types/jest": "^27.4.1",
    "esbuild": "^0.14.25",
    "jest": "^27.5.1",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "base-64": "^1.0.0",
    "html-entities": "^2.3.2"
  }
}
