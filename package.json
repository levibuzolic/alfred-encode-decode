{
  "name": "alfred-encode-decode",
  "version": "1.0.0",
  "main": "index.ts",
  "type": "module",
  "repository": "git@github.com:levibuzolic/alfred-encode-decode.git",
  "author": "Levi Buzolic <levibuzolic@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "esbuild index.ts --bundle --platform=node --outfile=build/index.js",
    "prebuild": "rm -rf dist build",
    "build": "esbuild index.ts --bundle --platform=node --minify --outfile=build/index.js",
    "postbuild": "pkg --debug --config package.json build/index.js",
    "test": "jest"
  },
  "pkg": {
    "scripts": [
      "build/index.js"
    ],
    "assets": [],
    "outputPath": "dist",
    "compress": "Brotli",
    "targets": [
      "node16-macos-arm64",
      "node16-macos-x64"
    ]
  },
  "devDependencies": {
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@swc/cli": "^0.1.55",
    "@swc/core": "^1.2.151",
    "@types/base-64": "^1.0.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "esbuild": "^0.14.25",
    "jest": "^27.5.1",
    "pkg": "^5.5.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "base-64": "^1.0.0"
  }
}
