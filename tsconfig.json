{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2021",
    "lib": ["es2021"],
    "pretty": true,
    "module": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "incremental": true,
    "noEmit": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "lib": ["es2021", "jest"],
  "exclude": ["build/**/*.js", "quickjs/**/*.js", "dist/**/*.js"]
}
